<%=form_for @task do |form| %>
<div class="form-group" style="margin: 20px 600px">
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>
</div>

<div class=" form-group" style="margin: 0px 600px">
 <%= form.label :details %>
  <%= form.text_field :details, class: "form-control"%>
</div>
<% if !@task.new_record? %>
<div class="form-check form-check-inline" style="margin:30px 600px">
  <div style="padding:10px">
    <%= form.label :completed %>
  </div>
  <div style="padding:10px; margin-top: -10px">
    <%= form.check_box :completed%>
  </div>
<%end%>
<div style="padding:10px">
  <%= form.submit %>
</div>
  </div>
<%end%>
